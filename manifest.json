{
  "manifest_version": 3,
  "name": "Recorder",
  "version": "1.0",
  "permissions": ["tabCapture", "offscreen", "activeTab"],
  "host_permissions": ["http://localhost:8080/*"],
  "action": {
    "default_title": "Start Recorder",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-recording": {
    "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Start/stop meeting recording"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["https://meet.google.com/*"],
    "js": ["content-script.js"]
  }]
}

